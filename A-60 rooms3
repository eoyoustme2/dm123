--====== Load spawner ======--
local spawner = loadstring(game:HttpGet("https://raw.githubusercontent.com/RegularVynixu/Utilities/main/Doors/Entity%20Spawner/V2/Source.lua"))()

--====== Create entity ======--
local entity = spawner.Create({
	Entity = {
		Name = "A-60",
		Asset = "rbxassetid://98950111164122", -- Đã xác nhận hợp lệ
		HeightOffset = 0
	},
	Lights = {
		Flicker = {
			Enabled = false,
			Duration = 1
		},
		Shatter = false,
		Repair = false
	},
	Earthquake = { Enabled = false },
	CameraShake = {
		Enabled = true,
		Range = 100,
		Values = {1.5, 20, 0.1, 1}
	},
	Movement = {
		Speed = 120,
		Delay = 1,
		Reversed = false
	},
	Rebounding = {
		Enabled = false,
		Type = "Ambush",
		Min = 1,
		Max = 1,
		Delay = 0
	},
	Damage = {
		Enabled = true,
		Range = 40,
		Amount = 0.001
	},
	Crucifixion = {
		Enabled = true,
		Range = 40,
		Resist = false,
		Break = true
	},
	Death = {
		Type = "Guiding",
		Hints = {
			"You died to who they call 'A-60'",
			"He is a harder version of A-60.",
			"Hide if you hear him...",
			"Don't leave early."
		},
		Cause = ""
	}
})

--====== Callbacks ======--

entity:SetCallback("OnSpawned", function()
	print("Entity has spawned")

	task.spawn(function()
		local success, err = pcall(function()
			local part = workspace:WaitForChild("A-60", 10)
			local object = part:WaitForChild("A-60New", 10)
			local attachment = object:WaitForChild("Main", 10)
			local face = attachment:WaitForChild("Face", 10)
			object.CanCollide = false

			local textures = {
				"rbxassetid://102898706588721",
				"rbxassetid://113341291399358",
				"rbxassetid://84513865367343",
				"rbxassetid://91404640127708",
				"rbxassetid://140295944899005",
				"rbxassetid://118168477565330",
				"rbxassetid://71280507926908",
				"rbxassetid://99778755008712",
			}

			local startTime = tick()
			while tick() - startTime < 10 and part and part.Parent do
				for _, texture in ipairs(textures) do
					if face then
						face.Texture = texture
					end
					task.wait(0.1)
				end
			end
		end)

		if not success then
			warn("Error in OnSpawned texture animation:", err)
		end
	end)
end)

entity:SetCallback("OnStartMoving", function()
	print("Entity has started moving")
end)

entity:SetCallback("OnEnterRoom", function(room, firstTime)
	print("Entity has entered room: " .. room.Name .. (firstTime and " for the first time" or " again"))
end)

entity:SetCallback("OnLookAt", function(lineOfSight)
	print(lineOfSight and "Player is looking at entity" or "Player view is obstructed")
end)

entity:SetCallback("OnRebounding", function(startOfRebound)
	print(startOfRebound and "Entity has started rebounding" or "Entity has finished rebounding")
end)

entity:SetCallback("OnDespawning", function()
	print("Entity is despawning")
end)

entity:SetCallback("OnDespawned", function()
	print("Entity has despawned")
end)

--====== Damage & Jumpscare Logic ======--
entity:SetCallback("OnDamagePlayer", function(newHealth)
    print(newHealth == 0 and "Entity has killed the player" or "Entity has damaged the player")

    task.spawn(function()
        local Players = game:GetService("Players")
        local Workspace = game:GetService("Workspace")
        local RunService = game:GetService("RunService")

        local player = Players.LocalPlayer
        local character = player.Character or player.CharacterAdded:Wait()
        local humanoid = character:WaitForChild("Humanoid", 5)
        local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
        local camera = Workspace.CurrentCamera

        local entityModel = Workspace:FindFirstChild("A-60")
        if not entityModel then
            warn("Không tìm thấy model 'A-60' trong Workspace!")
            return
        end

        local primaryPart = entityModel:FindFirstChild("A-60New")
        if not primaryPart then
            warn("Không tìm thấy 'A-60New' trong entity!")
            return
        end
        entityModel.PrimaryPart = primaryPart
        primaryPart.Anchored = true

        -- Khóa chuyển động nhân vật
        if humanoid then
            humanoid.WalkSpeed = 16
            humanoid.JumpPower = 0
            humanoid.AutoRotate = false
            humanoid.PlatformStand = true
        end

        -- Khóa camera
        camera.CameraType = Enum.CameraType.Scriptable
        local camConnection = RunService.RenderStepped:Connect(function()
            if primaryPart and primaryPart.Parent then
                -- Đặt vị trí entity đứng cách camera 4 studs về phía trước, cao hơn 2 studs
                local camCFrame = camera.CFrame
                local targetPosition = camCFrame.Position + camCFrame.LookVector * 4 + Vector3.new(0, 2, 0)
                primaryPart.CFrame = CFrame.new(targetPosition, camCFrame.Position) -- Hướng entity nhìn vào camera
                -- Đồng thời giữ camera nhìn entity luôn
                camera.CFrame = CFrame.lookAt(camera.CFrame.Position, primaryPart.Position)
            else
                camConnection:Disconnect()
                camera.CameraType = Enum.CameraType.Custom
            end
        end)

        -- Gây damage liên tục khi entity đứng trước camera
        while humanoid and humanoid.Health > 0 and entityModel and entityModel.Parent do
            if character:GetAttribute("Hiding") then
                print("Người chơi đang ẩn, dừng mất máu.")
                task.wait(0.1)
            else
                humanoid.Health = math.max(humanoid.Health - 0.9, 0)
                task.wait(0.04)
            end
        end

        -- Dọn dẹp sau khi thoát vòng lặp
        camConnection:Disconnect()
        camera.CameraType = Enum.CameraType.Custom

        if humanoid then
            humanoid.WalkSpeed = 16
            humanoid.JumpPower = 50
            humanoid.AutoRotate = true
            humanoid.PlatformStand = false
        end

        if entityModel and entityModel.Parent then
            entityModel:Destroy()
        end
    end)
end)

--====== Run entity ======--
entity:Run()
